<body>
  <h1>Python Basics</h1>
  <p>Complete the line of code below to send a message to the screen:</p>
  
  <div class="code-box">
    <code>print(<input id="inputText" type="text" placeholder='"Welcome"' />)</code>
  </div>
  
  <button onclick="checkAnswer()">CHECK</button>
  <p id="result"></p>

  <script>
    function checkAnswer() {
      const input = document.getElementById("inputText").value.trim();
      if (input === '"Welcome"' || input === "'Welcome'") {
        document.getElementById("result").innerText = "Correct! Great job!";
        document.getElementById("result").style.color = "lightgreen";
      } else {
        document.getElementById("result").innerText = "Try again!";
        document.getElementById("result").style.color = "red";
      }
    }
  </script>
